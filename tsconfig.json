{
  "compilerOptions": {
    "preserveConstEnums": true,
		"sourceMap": false,
		"target": "es5",
		"module": "CommonJS",
		"outDir": "./dist",
		"typeRoots": [
			"./node_modules/@types",
			"./src/@types",
		],
		"esModuleInterop": true,
	},
	"allowSyntheticDefaultImports": true,
  "include": ["src/"],
  "exclude": ["./node_modules", "./dist"]
}
